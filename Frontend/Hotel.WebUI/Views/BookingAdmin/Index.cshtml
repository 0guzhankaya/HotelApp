@model List<ResultBookingDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
	int count = 0;
}

<div class="table-responsive">
	<table class="table">
		<thead>
			<tr>
				<th>#</th>
				<th>Misafir</th>
				<th>Giriş Tarihi</th>
				<th>Çıkış Tarihi</th>
				<th>Durum</th>
				<th>Onayla</th>
				<th>Beklet</th>
				<th>Detay</th>
				<th>Güncelle</th>
				<th>İptal</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				count++;
				<tr>
					<th>@count</th>
					<td>@item.Name</td>
					<td>@(((DateTime)item.CheckIn).ToString("dd-MM-yyyy"))</td>
					<td>@(((DateTime)item.CheckOut).ToString("dd-MM-yyyy"))</td>
					<td>
						<span class="badge badge-primary px-2">@item.Status</span>
					</td>
					<td><a href="/BookingAdmin/ApprovedReservationDto/@item.BookingID" class="btn btn-outline-primary">Onayla</a></td>
					<td><a href="#" class="btn btn-outline-warning">Beklet</a></td>
					<td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
					<td><a href="#" class="btn btn-outline-info">Güncelle</a></td>
					<td><a href="#" class="btn btn-error">İptal Et</a></td>
				</tr>
			}
		</tbody>
	</table>
</div>
