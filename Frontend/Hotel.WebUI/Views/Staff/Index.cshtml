@model List<Hotel.WebUI.Models.Staff.StaffViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

@if (Model == null || !Model.Any())
{
    <p>Error! Unable to fetch staff data.</p>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Personel Adı</th>
            <th>Personel Ünvan</th>
            <th>Detaylar</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <th>@item.StaffID</th>
                <td>@item.Name</td>
                <td>@item.Title</td>
                <td><a href="#" class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</a></td>
                <td><a href="/Staff/UpdateStaff/@item.StaffID" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
                <td><a href="/Staff/DeleteStaff/@item.StaffID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            </tr>
        }
    </table>
}

<a href="/Staff/AddStaff" class="btn mb-1 btn-rounded btn-outline-info">Yeni Personel Girişi</a>
